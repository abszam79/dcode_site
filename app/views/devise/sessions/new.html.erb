<div class="banner_oth" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path "piscine.jpg" %>');">
  <div class="banner-content_oth">
     <h2>Log in</h2>
  </div>
</div>



<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true %>
        <%= f.input :password, required: false %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions custom-btn">
        <%= f.button :submit, "Log in", class: "btn btn-primary form-control" %>
      </div>
      <% end %>

      <div class="text-center custom-btn">
        <%= render "devise/shared/links" %>
      </div>

    </div>
  </div>
</div>

